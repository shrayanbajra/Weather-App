<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory android:title="General">

        <ListPreference
            android:dialogTitle="Select Units"
            android:entries="@array/pref_units_entries"
            android:entryValues="@array/pref_units_entry_values"
            android:key="pref_units"
            android:title="Units"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:dialogTitle="Enter Location"
            android:key="pref_location"
            android:title="Location"
            android:icon="@drawable/ic_edit_location"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>